<header>
  <nav>
    <ul>
      <li><a href="/" class="<%= path === '/' ? 'active' : '' %>">Home</a></li>
      <li>
        <a href="/products" class="<%= path === '/products' ? 'active' : '' %>"
          >Products</a
        >
      </li>
      <% if(isAuthenticated){ %>
      <li>
        <a href="/cart" class="<%= path === '/cart' ? 'active' : '' %>">Cart</a>
      </li>
      <li>
        <a href="/orders" class="<%= path === '/orders' ? 'active' : '' %>"
          >Orders</a
        >
      </li>
      <li>
        <a
          href="/admin/add-product"
          class="<%= path === '/admin/add-product' ? 'active' : '' %>"
          >Add Product</a
        >
      </li>
      <li>
        <a
          href="/admin/products"
          class="<%= path === '/admin/products' ? 'active' : '' %>"
          >Admin Products</a
        >
      </li>
      <% } %>
    </ul>

    <ul>
      <% if(!isAuthenticated){ %>
      <li>
        <a href="/login" class="<%= path === '/login' ? 'active' : '' %>"
          >Login</a
        >
      </li>

      <%}%> <% if(isAuthenticated){ %>

      <li>
        <form action="/logout" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit">Logout</button>
        </form>
      </li>
      <%}%>
    </ul>
  </nav>
</header>

<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/styles/shop.css" />
<link rel="stylesheet" href="/styles/form.css" />
<head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <section>
        <h2>SignUp</h2>
        <form action="/signup" method="POST" novalidate>
          <% if(errorMessage.length > 0){ %>
          <div class="error"><%= errorMessage %></div>
          <%}%>

          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

          <div>
            <label for="name">Name:</label>
            <input
              type="text"
              name="name"
              id="name"
              class="<%= validationError.find(e => e.path === 'name') ? 'invalid' : '' %>"
              placeholder="Name"
              value="<%= oldInput.name %>"
            />
          </div>
          <div>
            <label for="email">Email:</label>
            <input
              type="email"
              name="email"
              id="email"
              class="<%= validationError.find(e => e.path === 'email') ? 'invalid' : '' %>"
              placeholder="Email"
              value="<%= oldInput.email %>"
            />
          </div>

          <div>
            <label for="password">Password:</label>
            <input
              type="text"
              name="password"
              id="password"
              class="<%= validationError.find(e => e.path === 'password') ? 'invalid' : '' %>"
              placeholder="Password"
              value="<%= oldInput.password %>"
            />
          </div>

          <div>
            <label for="confirm_password">Confirm Password:</label>
            <input
              type="text"
              name="confirm_password"
              id="confirm_password"
              class="<%= validationError.find(e => e.path === 'confirm_password') ? 'invalid' : '' %>"
              placeholder="Confirm Password"
              value="<%= oldInput.confirm_password %>"
            />
          </div>

          <button type="submit">SignUp</button>
        </form>
        <div>
          Already have an account?
          <a href="/login">login</a>
        </div>
      </section>
    </main>
  </body>
</head>

<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/styles/shop.css" />
<style>
  main {
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
  }
  section {
    width: fit-content;
    padding: 40px;
    display: flex;
    flex-flow: column;
    gap: 20px;
    align-items: center;
    /* border: 1px solid gray;
    border-radius: 20px; */
  }
  form {
    width: 100%;
    display: flex;
    flex-flow: column;
    gap: 20px;
  }

  form > div > label {
    display: block;
    width: 100%;
  }

  form > div > input {
    width: 100%;
    margin: 5px 0 0 0;
    padding: 5px;
  }

  lavel[for="password"] {
    margin-top: 10px;
  }

  .invalid{
    border-color: red;
    outline-color: red;
  }
</style>
<head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <section>
        <h2>SignUp</h2>
        <form action="/signup" method="POST" novalidate>
          <% if(errorMessage.length > 0){ %>
          <div class="error"><%= errorMessage %></div>
          <%}%>

          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

          <div>
            <label for="name">Name:</label>
            <input
              type="text"
              name="name"
              id="name"
              class="<%= validationError.find(e => e.path === 'name') ? 'invalid' : '' %>"
              placeholder="Name"
              value="<%= oldInput.name %>"
            />
          </div>
          <div>
            <label for="email">Email:</label>
            <input
              type="email"
              name="email"
              id="email"
              class="<%= validationError.find(e => e.path === 'email') ? 'invalid' : '' %>"
              placeholder="Email"
              value="<%= oldInput.email %>"
            />
          </div>

          <div>
            <label for="password">Password:</label>
            <input
              type="text"
              name="password"
              id="password"
              class="<%= validationError.find(e => e.path === 'password') ? 'invalid' : '' %>"
              placeholder="Password"
              value="<%= oldInput.password %>"
            />
          </div>

          <div>
            <label for="confirm_password">Confirm Password:</label>
            <input
              type="text"
              name="confirm_password"
              id="confirm_password"
              class="<%= validationError.find(e => e.path === 'confirm_password') ? 'invalid' : '' %>"
              placeholder="Confirm Password"
              value="<%= oldInput.confirm_password %>"
            />
          </div>

          <button type="submit">SignUp</button>
        </form>
        <div>
          Already have an account?
          <a href="/login">login</a>
        </div>
      </section>
    </main>
  </body>
</head>
